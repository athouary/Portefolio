{
  "name": "pmd-starterpack",
  "version": "0.0.9",
  "description": "Complete Front-End workflow with Webpack, Babel, PostCss and real php Twig",
  "private": true,
  "homepage": "https://bitbucket.org/prismamediadigital/pmd-starterpack#readme",
  "repository": {
    "type": "git",
    "url": "git+https://bitbucket.org/prismamediadigital/pmd-starterpack"
  },
  "author": "PrismaMedia",
  "engines": {
    "node": "^6.9.1",
    "npm": "^3.10.8"
  },
  "config": {
    "baseBuild": "./src",
    "staticRoute": "./src",
    "fontRoute": "./src/assets/fonts"
  },
  "scripts": {
    "rimraf": "./node_modules/.bin/rimraf",
    "ncp": "./node_modules/.bin/ncp",
    "?info": "### Display list of avaible NPM Script Commandes.",
    "info": "./node_modules/.bin/npm-scripts-info",
    "?build": "### Build Everythings",
    "build": "cross-env NODE_ENV=production npm run clean && npm run font && npm run build:webpack",
    "?build:webpack": "### Build Webpack things : assets (js, css, images) except icon-font, template, etc.",
    "build:webpack": "cross-env BABEL_ENV=production webpack --progress --colors --config webpack.prod.config.js",
    "?clean": "### Clean/Remove build folder",
    "clean": "npm run rimraf dist",
    "?font": "### Build icon-font",
    "font": "dcs-icon-font --icons ./src/assets/fonts/svg/**/*.svg --out ./src/assets/fonts --fontname STARTERFONT --baseclass icon --classprefix icon- --cssTemplate ./src/assets/fonts/templates/fonts.hbs --cssDest ./src/assets/styles/ --cssFontsUrl ../fonts/STARTERFONT/",
    "?test:lint": "### Lint your JS and CSS files",
    "test:lint": "npm run test:eslint && npm run test:stylelint",
    "?test:format": "### Try to format your JS and CSS files",
    "test:format": "npm run test:eslintfmt && npm run test:stylelfmt",
    "?test:eslint": "### Launch ESlint",
    "test:eslint": "./node_modules/.bin/eslint -c .eslintrc ./src/ || true",
    "?test:eslintfmt": "### Format JS files with ESlint",
    "test:eslintfmt": "eslint -c .eslintrc --fix ./src/",
    "?test:stylelint": "### Launch Stylelint",
    "test:stylelint": "./node_modules/.bin/stylelint './src/**/*.css' --config .stylelintrc || true",
    "?test:stylelfmt": "### Format CSS files with StyleFMT",
    "test:stylelfmt": "./node_modules/.bin/stylefmt -c .stylelintrc -R ./src/",
    "?start": "### Launch server and start watching files",
    "start": "cross-env NODE_ENV=development nodemon boot.js",
    "?start:open": "### Start the server, watch for file changes and open your default browser",
    "start:open": "cross-env NODE_ENV=development nodemon boot.js --open",
    "?doc:jsdoc": "### Generate JSDoc file in Markdown",
    "doc:jsdoc": "./node_modules/.bin/jsdoc2md --configure './docs/jsdoc/jsdoc.json' './src/**/*.js' > './docs/jsdoc/API.md'",
    "precommit": "npm run test:lint"
  },
  "dependencies": {
    "fontfaceobserver": "^2.0.9",
    "jquery": "^3.1.0",
    "scriptjs": "^2.5.8"
  },
  "devDependencies": {
    "babel-core": "^6.24.0",
    "babel-eslint": "^7.2.3",
    "babel-loader": "^7.0.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.5.1",
    "babel-preset-stage-0": "^6.22.0",
    "babel-register": "^6.24.1",
    "babili-webpack-plugin": "^0.1.1",
    "bluebird": "^3.5.0",
    "browser-sync": "^2.18.12",
    "chalk": "^1.1.3",
    "cross-env": "^5.0.0",
    "css-loader": "^0.28.4",
    "css-mqpacker": "^6.0.1",
    "dcs-icon-font": "^3.0.1",
    "eslint": "^3.14.1",
    "eslint-config-standard": "^10.2.1",
    "eslint-plugin-import": "^2.3.0",
    "eslint-plugin-node": "^4.2.2",
    "eslint-plugin-promise": "^3.3.1",
    "eslint-plugin-standard": "^3.0.1",
    "express": "^4.15.3",
    "extract-text-webpack-plugin": "^2.1.0",
    "file-loader": "^0.11.1",
    "html-webpack-plugin": "^2.28.0",
    "husky": "^0.13.4",
    "image-webpack-loader": "^3.3.1",
    "jsdoc-babel": "^0.3.0",
    "jsdoc-to-markdown": "^2.0.1",
    "ncp": "^2.0.0",
    "node-dir": "^0.1.16",
    "node-twig": "^1.1.0",
    "nodemon": "^1.11.0",
    "npm-scripts-info": "^0.3.6",
    "postcss-cssnext": "^2.11.0",
    "postcss-import": "^10.0.0",
    "postcss-loader": "^2.0.5",
    "postcss-mixins": "^6.0.0",
    "postcss-url": "^6.1.0",
    "request": "^2.81.0",
    "rimraf": "^2.6.1",
    "style-loader": "^0.18.1",
    "stylefmt": "^6.0.0",
    "stylelint": "^7.8.0",
    "stylelint-config-standard": "^16.0.0",
    "webpack": "^2.5.1",
    "webpack-config": "^7.0.0",
    "webpack-dev-middleware": "^1.10.2",
    "webpack-hot-middleware": "^2.18.0"
  }
}

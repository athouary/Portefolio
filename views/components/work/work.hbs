<section class="works" data-page="works">
    <h3 class="heading works-title">
        {{{works.title}}}
    </h3>
    <div class="works-slider" data-glide>
        <div class="works-window glide__track" data-glide-el="track">
            <ul class="glide__slides">
                {{#each works.projects}}
                    <li class="works-item glide__slide">
                        <div class="works-picture">
                            <img class="works-image" src="{{this.image.url}}" alt="{{this.image.title}}">
                            <div class="action works-action">
                                <button class="action-button">
                                    {{this.button}}
                                </button>
                            </div>
                            <div class="works-shadow"></div>
                        </div>
                        <div class="works-column">
                            <article class="works-project">
                                <h2 class="works-project-title">{{this.title}}</h2>
                                <p class="works-project-text">{{{this.text}}}</p>
                                <ul class="works-project-skills">
                                    {{#each this.skills}}
                                        <li class="works-project-skill">{{this}}</li>
                                    {{/each}}
                                </ul>
                            </article>
                            <div class="works-controls" data-glide-el="controls">
                                <button class="button works-arrow" data-glide-dir="<">
                                    <svg class="works-arrow-image works-previous"><use xlink:href="#{{@root.works.previous.image.id}}"></use></svg>
                                </button>
                                <button class="button works-arrow" data-glide-dir=">">
                                    <svg class="works-arrow-image works-next"><use xlink:href="#{{@root.works.next.image.id}}"></use></svg>
                                </button>
                            </div>
                        </div>
                    </li>
                {{/each}}
            </ul>
        </div>
    </div>
</section>
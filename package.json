{
  "name": "pmd-starterpack",
  "version": "0.0.9",
  "description": "Complete Front-End workflow with Webpack, Babel, PostCss and real php Twig",
  "private": true,
  "homepage": "https://bitbucket.org/prismamediadigital/pmd-starterpack#readme",
  "repository": {
    "type": "git",
    "url": "git+https://bitbucket.org/prismamediadigital/pmd-starterpack"
  },
  "author": "PrismaMedia",
  "engines": {
    "node": "^6",
    "npm": "^3.3.6"
  },
  "config": {
    "baseBuild": "./src",
    "staticRoute": "./src",
    "fontRoute": "./src/assets/fonts"
  },
  "scripts": {
    "?info": "### Display list of avaible NPM Script Commandes.",
    "info": "./node_modules/.bin/npm-scripts-info",
    "?build": "### Build Everythings",
    "build": "npm run clean && npm run font && npm run build:webpack",
    "?build:webpack": "### Build Webpack things : assets (js, css, images) except icon-font, template, etc.",
    "build:webpack": "webpack --progress --colors --config webpack.prod.config.js",
    "?clean": "### Clean/Remove build folder",
    "clean": "rimraf -- build",
    "?font": "### Build icon-font",
    "font": "dcs-icon-font --icons ./src/assets/fonts/svg/**/*.svg --out ./src/assets/fonts --fontname TEL --baseclass icon --classprefix icon- --cssTemplate ./src/assets/fonts/templates/fonts.hbs --cssDest ./src/assets/styles/ --cssFontsUrl ../fonts/TEL/",
    "?test": "### Lint your JS and CSS files",
    "test": "npm run test:eslint && npm run test:stylelint",
    "?test:format": "### Try to format your JS and CSS files",
    "test:format": "npm run test:eslintfmt && npm run test:stylelfmt",
    "?test:eslint": "### Launch ESlint",
    "test:eslint": "./node_modules/.bin/eslint -c .eslintrc ./src/ || true",
    "?test:eslintfmt": "### Format JS files with ESlint",
    "test:eslintfmt": "eslint -c .eslintrc --fix ./src/ || true",
    "?test:stylelint": "### Launch Stylelint",
    "test:stylelint": "./node_modules/.bin/stylelint './src/**/*.css' --config .stylelintrc || true",
    "?test:stylelfmt": "### Format CSS files with StyleFMT",
    "test:stylelfmt": "./node_modules/.bin/stylefmt -c .stylelintrc -R ./src/",
    "?start": "### Launch server and start watching files",
    "start": "node server",
    "?start:open": "### Start the server, watch for file changes and open your default browser",
    "start:open": "node server open"
  },
  "dependencies": {
    "fontfaceobserver": "^2.0.4",
    "jquery": "^3.1.0",
    "scriptjs": "^2.5.8"
  },
  "devDependencies": {
    "babel-core": "^6.18.2",
    "babel-eslint": "^7.1.0",
    "babel-loader": "^6.2.8",
    "babel-plugin-transform-runtime": "^6.12.0",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-stage-0": "^6.16.0",
    "browser-sync": "^2.18.2",
    "css-loader": "^0.26.0",
    "css-mqpacker": "^5.0.1",
    "dcs-icon-font": "^2.2.1",
    "eslint": "^3.10.2",
    "eslint-config-standard": "^6.2.1",
    "eslint-loader": "^1.6.1",
    "eslint-plugin-promise": "^3.3.1",
    "eslint-plugin-standard": "^2.0.1",
    "expose-loader": "^0.7.1",
    "express": "^3",
    "extract-text-webpack-plugin": "^1.0.1",
    "file-loader": "^0.9.0",
    "html-webpack-plugin": "^2.24.1",
    "image-webpack-loader": "^3.0.0",
    "node-twig": "^1.1.0",
    "npm-scripts-info": "^0.3.6",
    "postcss-browser-reporter": "^0.5.0",
    "postcss-cssnext": "^2.7.0",
    "postcss-import": "^8.2.0",
    "postcss-loader": "^1.1.1",
    "postcss-mixins": "^5.4.0",
    "postcss-reporter": "^2.0.0",
    "postcss-url": "^5.1.2",
    "request": "^2.79.0",
    "rimraf": "^2.5.4",
    "style-loader": "^0.13.1",
    "stylefmt": "^5.0.0",
    "stylelint": "^7.6.0",
    "stylelint-config-standard": "^15.0.0",
    "webpack": "^1.13.3",
    "webpack-dev-middleware": "^1.8.4",
    "webpack-hot-middleware": "^2.13.2"
  }
}
